@using (@Html.BeginForm("SendCommand", "Home", FormMethod.Post))
{
        <button type="submit" name="command" class="btn btn-success btn-lg btn-block" value="on">Turn On</button><br />
        <button type="submit" name="command" class="btn btn-danger btn-lg btn-block" value="off">Turn Off</button><br />
        <button type="submit" name="command" class="btn btn-primary btn-lg btn-block" value="serviceon"><span class="glyphicon glyphicon-facetime-video"></span> Service Mode</button><br />
